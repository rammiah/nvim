; core settings
[core]
	editor=nvim
; set difftool
[diff]
	tool = nvimdiff
[difftool]
	prompt = true
[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
; set mergetool
[merge]
	tool = nvimdiff
[mergetool]
	keepBackup = false
	prompt = true
	writeToTemp = true
[mergetool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[pull]
	ff = only
	rebase = false

[core]
	pager = delta
	quotepath = false
	longpaths = true
	autocrlf = input
	trustctime = false
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.attributes_global
	ignorecase = true
	untrackedcache = true
[interactive]
	diffFilter = delta --color-only
[add.interactive]
	useBuiltin = false # required for git 2.37.0
[delta]
	navigate = true    # use n and N to move between diff sections
	light = true      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	tabs = 4
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[commit]
	sign = true
	gpgSign = true
[http]
	sslVerify = true
	postBuffer = 655360000
[init]
	defaultBranch = master
[include]
	path = ~/.gitconfig.d/custom
[diff "text"]
	textconv = cat
[lfs]
	concurrenttransfers = 32
	fetchrecentrefsdays = 0
	pruneoffsetdays = 0
	dialtimeout = 3
	tlstimeout = 3
[lfs "transfer"]
	maxretries = 1
	maxretrydelay = 2
[merge "lfs-text"]
	driver = git lfs merge-driver --ancestor %O --current %A --other %B --marker-size %L --output %A --program 'git merge-file --stdout --marker-size=%%L %%A %%O %%B >%%D'
[rebase]
	backend = merge
[safe]
	directory = *
