; core settings
[core]
    editor=nvim
; set difftool
[diff]
	tool = nvimdiff
[difftool]
	prompt = true
[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
 ; set mergetool
[merge]
    tool = nvimdiff
[mergetool]
    keepBackup = false
    prompt = true
    writeToTemp = true
[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
; store github token
[credential]
    helper = store
