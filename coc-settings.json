{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        "vendor/"
      ],
      "args": ["-remote=unix;/tmp/gopls-daemon-socket", "-logfile=auto", "-debug=\"\"", "-rpc.trace"],
      "filetypes": [
        "go"
      ],
      "settings": {
        "usePlaceholder": true
      }
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },

  "suggest.enablePreselect": true,
  "suggest.noselect": true,
  "suggest.maxCompleteItemCount": 30,
  "suggest.timeout": 10000,
  "suggest.enablePreview": true,
  "suggest.autoTrigger": "always",
  "suggest.floatEnable": true,
  "suggest.localityBonus": true,
  "suggest.fixInsertedWord": true,
  "suggest.selection": "recentlyUsedByPrefix",
  "suggest.minTriggerInputLength": 2,
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.removeDuplicateItems": true,
  "suggest.defaultSortMethod": "length",

  "codeLens.enable": true,
  "codeLens.separator": "üîç",

  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.formatOnSaveFiletypes": ["go"],
  "coc.preferences.enableMarkdown": true,
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.messageLevel": "warning",
  "coc.preferences.formatOnType": true,


  "json.format.enable": true,

  "diagnostic.checkCurrentLine": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.autoRefresh": true,
  "diagnostic.messageDelay": 200,
  "diagnostic.virtualText": false,
  "diagnostic.enableMessage": "always",

